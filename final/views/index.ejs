<%- include('partials/header') %>
<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        padding: 60px 40px;
        margin-bottom: 40px;
    }
    .feature-card {
        transition: transform 0.3s ease;
        border: none;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 16px rgba(0,0,0,0.15);
    }
    .product-card-home {
        transition: all 0.3s ease;
        border: none;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .product-card-home:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
    }
</style>

<div class="row">
    <div class="col-12">
        <div class="hero-section text-white text-center">
            <h1 class="display-3 fw-bold mb-3">Welcome to E-Commerce Store</h1>
            <p class="lead mb-4">Discover amazing products at unbeatable prices</p>
            <a class="btn btn-light btn-lg px-5" href="/products">
                <i class="bi bi-shop"></i> Start Shopping
            </a>
        </div>
    </div>
</div>

<div class="row mb-5">
    <div class="col-md-4 mb-4">
        <div class="card feature-card h-100">
            <div class="card-body text-center p-4">
                <i class="bi bi-truck fs-1 text-primary mb-3"></i>
                <h5 class="card-title">Fast Delivery</h5>
                <p class="card-text text-muted">Quick and reliable shipping to your doorstep within 2-3 days</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card feature-card h-100">
            <div class="card-body text-center p-4">
                <i class="bi bi-shield-check fs-1 text-success mb-3"></i>
                <h5 class="card-title">Secure Payment</h5>
                <p class="card-text text-muted">100% secure and encrypted payment processing</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card feature-card h-100">
            <div class="card-body text-center p-4">
                <i class="bi bi-arrow-repeat fs-1 text-warning mb-3"></i>
                <h5 class="card-title">Easy Returns</h5>
                <p class="card-text text-muted">Hassle-free 30-day return policy on all products</p>
            </div>
        </div>
    </div>
</div>

<% if (featuredProducts && featuredProducts.length > 0) { %>
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="bi bi-star-fill text-warning"></i> Featured Products
            </h2>
        </div>
    </div>
    <div class="row">
        <% featuredProducts.forEach(product => { %>
            <div class="col-md-4 col-lg-2 mb-4">
                <div class="card product-card-home h-100">
                    <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title"><%= product.name %></h6>
                        <p class="card-text text-primary fw-bold mb-2">$<%= product.price.toFixed(2) %></p>
                        <div class="mt-auto">
                            <% if (product.stock > 0) { %>
                                <button class="btn btn-sm btn-primary w-100 add-to-cart-btn" data-product-id="<%= product._id %>">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </button>
                            <% } else { %>
                                <button class="btn btn-sm btn-secondary w-100" disabled>Out of Stock</button>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
    <div class="text-center mt-4">
        <a href="/products" class="btn btn-outline-primary btn-lg">
            View All Products <i class="bi bi-arrow-right"></i>
        </a>
    </div>
<% } %>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script>
$(document).ready(function() {
    $('.add-to-cart-btn').on('click', function() {
        const btn = $(this);
        const productId = btn.data('product-id');
        const originalText = btn.html();
        
        btn.prop('disabled', true).html('<i class="bi bi-hourglass-split"></i> Adding...');
        
        $.ajax({
            url: `/cart/add/${productId}`,
            method: 'POST',
            data: { quantity: 1 },
            success: function(response) {
                btn.html('<i class="bi bi-check-circle"></i> Added!').removeClass('btn-primary').addClass('btn-success');
                
                setTimeout(function() {
                    btn.html(originalText).removeClass('btn-success').addClass('btn-primary').prop('disabled', false);
                }, 2000);
                
                showToast('Product added to cart successfully!');
            },
            error: function(xhr) {
                btn.html(originalText).prop('disabled', false);
                alert(xhr.responseJSON?.error || 'Error adding to cart');
            }
        });
    });
    
    function showToast(message) {
        const toast = $(`
            <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
                <div class="toast show bg-success text-white" role="alert">
                    <div class="toast-header bg-success text-white border-0">
                        <i class="bi bi-check-circle me-2"></i>
                        <strong class="me-auto">Success</strong>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                    </div>
                    <div class="toast-body">
                        ${message} <a href="/cart" class="text-white fw-bold">View Cart</a>
                    </div>
                </div>
            </div>
        `);
        
        $('body').append(toast);
        setTimeout(function() {
            toast.fadeOut(function() {
                $(this).remove();
            });
        }, 3000);
    }
});
</script>

<%- include('partials/footer') %>


