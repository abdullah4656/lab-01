<%- include('partials/header') %>
<style>
    .success-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: #198754;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 40px;
        margin: 0 auto 20px;
        animation: scaleIn 0.5s ease-out;
    }
    @keyframes scaleIn {
        from {
            transform: scale(0);
        }
        to {
            transform: scale(1);
        }
    }
    .order-summary-box {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
    }
</style>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-5">
                <div class="success-icon">
                    <i class="bi bi-check-lg"></i>
                </div>
                <h1 class="display-4 text-success mb-3">Order Confirmed!</h1>
                <p class="lead text-muted">Thank you for your purchase. Your order has been successfully placed.</p>
                <div class="alert alert-success d-inline-block">
                    <strong>Order Number:</strong> <%= order.orderNumber %>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h4 class="mb-4"><i class="bi bi-info-circle text-primary"></i> Order Details</h4>
                    
                    <!-- Customer Information -->
                    <div class="order-summary-box">
                        <h6 class="text-primary mb-3"><i class="bi bi-person"></i> Customer Information</h6>
                        <p class="mb-1"><strong>Name:</strong> <%= order.customer.fullName %></p>
                        <p class="mb-1"><strong>Email:</strong> <%= order.customer.email %></p>
                        <p class="mb-0"><strong>Phone:</strong> <%= order.customer.phone %></p>
                    </div>

                    <!-- Shipping Address -->
                    <div class="order-summary-box">
                        <h6 class="text-primary mb-3"><i class="bi bi-truck"></i> Shipping Address</h6>
                        <p class="mb-1"><%= order.shipping.address %></p>
                        <p class="mb-0"><%= order.shipping.city %>, <%= order.shipping.postalCode %>, <%= order.shipping.country %></p>
                    </div>

                    <!-- Order Items -->
                    <div class="order-summary-box">
                        <h6 class="text-primary mb-3"><i class="bi bi-bag-check"></i> Order Items</h6>
                        <div class="table-responsive">
                            <table class="table table-borderless mb-0">
                                <tbody>
                                    <% order.items.forEach(item => { %>
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <% if (item.product && item.product.image) { %>
                                                        <img src="<%= item.product.image %>" alt="<%= item.name %>" style="width: 50px; height: 50px; object-fit: cover; border-radius: 8px; margin-right: 15px;">
                                                    <% } %>
                                                    <div>
                                                        <strong><%= item.name %></strong>
                                                        <div><small class="text-muted">Qty: <%= item.quantity %></small></div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-end align-middle">
                                                <strong>$<%= (item.price * item.quantity).toFixed(2) %></strong>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Pricing Summary -->
                    <div class="border-top pt-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span>$<%= order.pricing.subtotal.toFixed(2) %></span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping:</span>
                            <span>$<%= order.pricing.shipping.toFixed(2) %></span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Tax:</span>
                            <span>$<%= order.pricing.tax.toFixed(2) %></span>
                        </div>
                        <div class="d-flex justify-content-between border-top pt-3">
                            <strong class="fs-5">Total:</strong>
                            <strong class="fs-5 text-primary">$<%= order.pricing.total.toFixed(2) %></strong>
                        </div>
                    </div>

                    <!-- Payment & Status -->
                    <div class="mt-4 p-3 bg-light rounded">
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-0"><strong>Payment Method:</strong></p>
                                <p class="text-capitalize">
                                    <% if (order.payment.method === 'card') { %>
                                        <i class="bi bi-credit-card"></i> Credit/Debit Card
                                    <% } else if (order.payment.method === 'cod') { %>
                                        <i class="bi bi-cash"></i> Cash on Delivery
                                    <% } else { %>
                                        <i class="bi bi-wallet2"></i> Digital Wallet
                                    <% } %>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-0"><strong>Order Status:</strong></p>
                                <p>
                                    <span class="badge bg-info text-capitalize"><%= order.status %></span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="text-muted mb-3">
                    <i class="bi bi-envelope"></i> A confirmation email has been sent to <%= order.customer.email %>
                </p>
                <a href="/products" class="btn btn-primary btn-lg me-2">
                    <i class="bi bi-shop"></i> Continue Shopping
                </a>
                <a href="/" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-house"></i> Go to Home
                </a>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

