                <span class="badge bg-primary fs-6 px-3 py-2"><%= featuredProducts.length %> Products</span>
            </div>
        </div>
    </div>
    <div class="row">
        <% featuredProducts.forEach(product => { %>
            <div class="col-md-4 col-lg-2 mb-4">
                <div class="card product-card-home h-100">
                    <div class="position-relative">
                        <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>" 
                             style="height: 200px; object-fit: cover; width: 100%;">
                        <% if (product.stock > 0 && product.stock <= 10) { %>
                            <span class="position-absolute top-0 end-0 bg-warning text-dark px-2 py-1 m-2 rounded">
                                Only <%= product.stock %> left!
                            </span>
                        <% } %>
                    </div>
                    <div class="card-body d-flex flex-column p-3">
                        <h6 class="card-title fw-bold mb-2"><%= product.name %></h6>
                        <div class="d-flex align-items-center mb-2">
                            <div class="text-warning small">
                                <% for(let i=0; i<5; i++) { %>
                                    <i class="bi bi-star<% if(i<4){ %>-fill<% } %>"></i>
                                <% } %>
                            </div>
                            <small class="text-muted ms-2">(4.0)</small>
                        </div>
                        <p class="card-text text-primary fw-bold fs-5 mb-3">$<%= product.price.toFixed(2) %></p>
                        <div class="mt-auto">
                            <% if (product.stock > 0) { %>
                                <button class="btn btn-primary w-100 add-to-cart-btn" 
                                        data-product-id="<%= product._id %>">
                                    <i class="bi bi-cart-plus me-2"></i> Add to Cart
                                </button>
                            <% } else { %>
                                <button class="btn btn-secondary w-100" disabled>
                                    <i class="bi bi-x-circle me-2"></i> Out of Stock
                                </button>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
